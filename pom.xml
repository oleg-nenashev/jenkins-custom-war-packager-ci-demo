<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>io.jenkins.tools.custom-war-packager.demo</groupId>
  <artifactId>artifact-manager-s3-demo</artifactId>
  <version>1.0-SNAPSHOT</version>

  <packaging>pom</packaging>

  <properties>
    <custom-war-packager.mvnSettingsFile></custom-war-packager.mvnSettingsFile>
  </properties>

  <build>
    <plugins>
      <!-- TODO: ensures that the maven-dependency-plugin is available before we start the build -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.0.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <configuration>
              <artifact>io.jenkins.tools.custom-war-packager:custom-war-packager-maven-plugin:0.1-alpha-3</artifact>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Build -->
      <plugin>
        <groupId>io.jenkins.tools.custom-war-packager</groupId>
        <artifactId>custom-war-packager-maven-plugin</artifactId>
        <version>0.1-alpha-4-20180403.135154-1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>custom-war</goal>
            </goals>
            <configuration>
              <configFilePath>packager-config.yml</configFilePath>
              <warVersion>1.0-artifact-manager-s3-SNAPSHOT</warVersion>
              <mvnSettingsFile>${custom-war-packager.mvnSettingsFile}</mvnSettingsFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <pluginRepositories>
    <pluginRepository>
      <id>repo.jenkins-ci.org</id>
      <url>https://repo.jenkins-ci.org/public/</url>
    </pluginRepository>
  </pluginRepositories>

</project>
